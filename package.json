{
  "name": "gh-describe",
  "version": "1.2.0",
  "description": "`git describe --tags` in shallow clones on GitHub Actions.",
  "main": "src/index.ts",
  "scripts": {
    "build": "ncc build --source-map --license licenses.txt",
    "fix": "run-s fix:prettier fix:eslint fix:tsc",
    "fix:eslint": "npm run lint:eslint -- --fix",
    "fix:prettier": "npm run lint:prettier -- --write",
    "fix:tsc": "npm run lint:tsc",
    "lint": "run-p -l -c --aggregate-output lint:*",
    "lint:eslint": "eslint src",
    "lint:prettier": "prettier --check .",
    "lint:tsc": "tsc src/**.ts --noEmit",
    "test": "run-p -l -c --aggregate-output lint:* unit",
    "unit": "jest",
    "watch": "npm run build -- -w"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/proudust/gh-describe.git"
  },
  "keywords": [
    "actions"
  ],
  "author": "Proudust",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/proudust/gh-describe/issues"
  },
  "homepage": "https://github.com/proudust/gh-describe#readme",
  "devDependencies": {
    "@actions/core": "^1.4.0",
    "@actions/github": "^5.0.0",
    "@types/jest": "^26.0.24",
    "@types/node": "^16.3.2",
    "@typescript-eslint/eslint-plugin": "^5.8.0",
    "@typescript-eslint/parser": "^5.8.0",
    "@vercel/ncc": "^0.33.1",
    "eslint": "^8.5.0",
    "eslint-plugin-github": "^4.3.5",
    "eslint-plugin-jest": "^25.3.0",
    "jest": "^27.0.6",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.3.2",
    "ts-jest": "^27.1.2",
    "typescript": "^4.5.4"
  }
}
